

<%= @cocktail.name %>
<% @cocktail.doses.each do |dose| %>
<%= dose.ingredient.name %>
<%= dose.description %>
<%= link_to "Delete Dose",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
<% end %>
<p><%= link_to "Add an ingredient",  new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back to homepage", cocktails_path %></p>

